<Page x:Class="VPS_Cloud.Views.AuthPG"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VPS_Cloud.Views"
      mc:Ignorable="d" 
      d:DesignHeight="675" d:DesignWidth="1200"
      Title="AuthPG">
    <Grid>
        <Border Style="{StaticResource MainBorder}" Width="320" Height="450">
            <Border.Background>
                <SolidColorBrush Color="{StaticResource BasicBColor}" Opacity="0.7"/>
            </Border.Background>
            <StackPanel Width="300" Height="430">
                <TextBlock Style="{StaticResource BigText}" Text="VPS Cloud" Margin="0 0 0 10" Foreground="{StaticResource BasicW}" HorizontalAlignment="Center"/>
                <Border Padding="10" Style="{StaticResource MainBorder}" Margin="0 0 0 20" Width="300" Height="300" Background="{StaticResource BasicW}">
                    <DockPanel Height="280">
                        <TextBlock DockPanel.Dock="Top" Style="{StaticResource TitleText}" Text="Вход" HorizontalAlignment="Center"/>
                        <StackPanel Margin="0 0 0 20" DockPanel.Dock="Top" VerticalAlignment="Center">
                            <TextBox Style="{StaticResource AuthTB}" Tag="логин:"/>
                            <PasswordBox Style="{StaticResource AuthPB}" Margin="0 20 0 0" Tag="пароль:"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
                <StackPanel Orientation="Horizontal">
                    <Button Width="140" Content="Регистрация" Foreground="{StaticResource BasicB}" Margin="0 0 20 0" Style="{StaticResource ButtonOutPanelWhite}"/>
                    <Button Width="140" Content="Войти" Foreground="{StaticResource BasicW}" Style="{StaticResource ButtonOutPanel}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
